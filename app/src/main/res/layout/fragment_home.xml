<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/today_header"
            android:layout_width="134dp"
            android:layout_height="60dp"
            android:text="Today"
            android:textSize="34sp"
            android:textStyle="bold" android:textColor="#242424" android:gravity="center|top"
            android:fontFamily="sans-serif-medium"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_recycler_view_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tomorrow_header"
            android:layout_width="206dp"
            android:layout_height="80dp"
            android:text="Tomorrow"
            android:textSize="34sp"
            android:textStyle="bold" android:textColor="#242424" android:gravity="center"
            android:fontFamily="sans-serif-medium"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/task_recycler_view_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/add_task_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24"
            android:contentDescription="Add Task" android:layout_gravity="end" android:tint="#FFFEFE"
            android:backgroundTint="@color/black" android:scaleType="center"/>
</LinearLayout>
